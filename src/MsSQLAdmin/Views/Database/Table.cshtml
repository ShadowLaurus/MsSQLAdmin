@model IEnumerable<MsSQLAdmin.Models.TableModel>
@{
    ViewData["Title"] = "Table";
}
<h2>Table</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxLength)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsNullable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPrimaryKey)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaxLength)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precision)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Scale)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsNullable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPrimaryKey)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
